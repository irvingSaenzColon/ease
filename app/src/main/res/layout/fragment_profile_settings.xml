<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/jet_black"
        tools:text="Settings"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        app:cardCornerRadius="8dp"
        android:elevation="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSettings"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        android:backgroundTint="@color/dr_white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ciProfileImage"
                android:layout_width="61dp"
                android:layout_height="61dp"

                android:backgroundTint="@color/jet_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/ciProfileImage"
                app:layout_constraintEnd_toStartOf="@id/ivProfileArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/jet_black"
                    android:textSize="18sp"
                    tools:text="Sampls@sample.com" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14sp"
                    tools:text="nombre nombre" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivProfileArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvGetCars"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="12dp"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@id/cvProfileSettings"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        android:backgroundTint="@color/dr_white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"

            >
            <FrameLayout
                android:id="@+id/flCircular"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:background="@drawable/rounded_gray_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ciCars"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:text="@string/rented_cars"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/jet_black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/flCircular"
                app:layout_constraintEnd_toStartOf="@id/ivRentedCars"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/ivRentedCars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPayMethod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/cvGetCars"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        android:backgroundTint="@color/dr_white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"

            >
            <FrameLayout
                android:id="@+id/flPayMethodCircular"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:background="@drawable/rounded_gray_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ciPayMethod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:text="@string/pay_methods"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/jet_black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/flPayMethodCircular"
                app:layout_constraintEnd_toStartOf="@id/ivPayMethod"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/ivPayMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPublishedCars"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/cvPayMethod"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        android:backgroundTint="@color/dr_white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"

            >
            <FrameLayout
                android:id="@+id/flPublishedCars"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:background="@drawable/rounded_gray_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ciPublishedCars"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:text="@string/published_cars"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/jet_black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/flPublishedCars"
                app:layout_constraintEnd_toStartOf="@id/ivPublishedCarsArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/ivPublishedCarsArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLanguage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/cvPublishedCars"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        android:backgroundTint="@color/dr_white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            >
            <FrameLayout
                android:id="@+id/flLanguageCircle"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:background="@drawable/rounded_gray_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ciLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:text="@string/language"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/jet_black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/flLanguageCircle"
                app:layout_constraintEnd_toStartOf="@id/ivLanguageArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/ivLanguageArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSecurity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/cvPublishedCars"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        android:backgroundTint="@color/dr_white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            >
            <FrameLayout
                android:id="@+id/flSecurityCircle"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:background="@drawable/rounded_gray_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ciSecurity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:text="@string/security"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/jet_black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/flSecurityCircle"
                app:layout_constraintEnd_toStartOf="@id/ivSecurityArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/ivSecurityArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="12dp"
        android:layout_marginTop="15dp"

        app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        android:backgroundTint="@color/dr_white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            >
            <FrameLayout
                android:id="@+id/flLogoutCircle"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:background="@drawable/rounded_gray_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ciLogout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:text="@string/logout"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/jet_black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/flLogoutCircle"
                app:layout_constraintEnd_toStartOf="@id/ivLogoutArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/ivLogoutArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>